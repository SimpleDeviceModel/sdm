file(GLOB_RECURSE INSTALLED_EXE "@CMAKE_INSTALL_PREFIX@/@BIN_INSTALL_DIR@/*.exe")
file(GLOB_RECURSE INSTALLED_DLL "@CMAKE_INSTALL_PREFIX@/@BIN_INSTALL_DIR@/*.dll")
list(APPEND INSTALLED_BINARIES ${INSTALLED_EXE} ${INSTALLED_DLL})

set(QTLIBPATH "@QTLIBPATH@")
set(NOVCRUNTIME "@NOVCRUNTIME@")

if(INSTALLED_BINARIES)
	if(QTLIBPATH)
		execute_process(COMMAND "@CMAKE_INSTALL_PREFIX@/@BIN_INSTALL_DIR@/dlldeptool.exe" ${NOVCRUNTIME} --dest-dir . --libpath ${QTLIBPATH} ${INSTALLED_BINARIES} WORKING_DIRECTORY "@CMAKE_INSTALL_PREFIX@/@BIN_INSTALL_DIR@")
	else()
		execute_process(COMMAND "@CMAKE_INSTALL_PREFIX@/@BIN_INSTALL_DIR@/dlldeptool.exe" ${NOVCRUNTIME} --dest-dir . ${INSTALLED_BINARIES} WORKING_DIRECTORY "@CMAKE_INSTALL_PREFIX@/@BIN_INSTALL_DIR@")
	endif()
endif()
