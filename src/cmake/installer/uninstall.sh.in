#!/bin/sh

# Uninstall program

@EMPTY@rm -f @CMAKE_INSTALL_PREFIX@/bin/sdmconsole
@EMPTY@rm -f @CMAKE_INSTALL_PREFIX@/bin/sdmhost
@EMPTY@rm -rf @CMAKE_INSTALL_PREFIX@/lib/sdm
@EMPTY@rm -rf @CMAKE_INSTALL_PREFIX@/include/sdm
@EMPTY@rm -rf @CMAKE_INSTALL_PREFIX@/share/sdm

# Remove desktop entries

@EMPTY@rm -f @CMAKE_INSTALL_PREFIX@/share/applications/sdmconsole.desktop
@EMPTY@rm -f @CMAKE_INSTALL_PREFIX@/share/icons/hicolor/scalable/apps/sdmconsole.svg
@EMPTY@rm -f @CMAKE_INSTALL_PREFIX@/share/icons/hicolor/256x256/apps/sdmconsole.png

# Remove user configuration

@EMPTY@rm -f $ENV{HOME}/.config/Microproject/sdmconsole.ini
@EMPTY@rm -rf $ENV{HOME}/.config/Microproject/sdmconsole
@EMPTY@rm -df $ENV{HOME}/.config/Microproject

# Remove these directories only if empty

@DONTREMOVE@rm -df @CMAKE_INSTALL_PREFIX@/bin
@DONTREMOVE@rm -df @CMAKE_INSTALL_PREFIX@/lib
@DONTREMOVE@rm -df @CMAKE_INSTALL_PREFIX@/include
@DONTREMOVE@rm -df @CMAKE_INSTALL_PREFIX@/share/applications
@DONTREMOVE@rm -df @CMAKE_INSTALL_PREFIX@/share/icons/hicolor/scalable/apps
@DONTREMOVE@rm -df @CMAKE_INSTALL_PREFIX@/share/icons/hicolor/scalable
@DONTREMOVE@rm -df @CMAKE_INSTALL_PREFIX@/share/icons/hicolor/256x256
@DONTREMOVE@rm -df @CMAKE_INSTALL_PREFIX@/share/icons/hicolor
@DONTREMOVE@rm -df @CMAKE_INSTALL_PREFIX@/share/icons
@DONTREMOVE@rm -df @CMAKE_INSTALL_PREFIX@/share
@DONTREMOVE@rm -df @CMAKE_INSTALL_PREFIX@
